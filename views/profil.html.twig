{% extends "layout.html.twig" %}


{% block title %}Praticiens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if visitor %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for visitor in visitors %}
                <tr>
                    <td><a href="/profil/{{ visitor.id }}">{{ visitor.last_name }}</a></td>
                    <td>{{ visitor.first_name }}</td>
                    <td>{{ visitor.address }}</td>
                    <td>{{ visitor.zip_code }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun Détails trouvé.</div>
{% endif %}   
{% endblock %}