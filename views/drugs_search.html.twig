{% extends "layout.html.twig" %}
{% set drugMenu = true %}

{% block title %}Recherche de m√©dicaments{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form" action="/drugs/results/" method="post">
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-1 control-label">Famille</label>
            <div class="col-sm-7">
                <select class="form-control" name="family">
                    {% for family in families %}
                        <option value="{{ family.id }}">{{ family.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-search"></span> Rechercher</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}